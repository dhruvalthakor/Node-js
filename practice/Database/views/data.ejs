      <div class="col-md-12">
        <label for="bookName" class="form-label">image</label>
        <input type="file" name="image" id="bookName" class="form-control">
      </div>

      

      <div class="col-12">
        <button type="submit" class="btn btn-primary">Add Book</button>
      </div>
    </form>

    <!-- Book Collection Display -->
    <h1 class="page-title">Our Book Collection</h1>
    <div class="row g-4 mt-4">
      <% bookData.map((data)=>{ %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card">
           
            <div class="card-body">
              <h5 class="card-title"><%= data.Name %></h5>
              
           
            <img src="<%= data.image %>" alt="" class="w-100">
