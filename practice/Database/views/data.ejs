        <input type="text" name="Color" id="bookName" class="form-control" placeholder="Enter Book Title" >
        <input type="text" name="Color" id="bookName" class="form-control" placeholder="Enter Book Title" >
        <input type="text" name="Color" id="bookName" class="form-control" placeholder="Enter Book Title" >
        <input type="text" name="Color" id="bookName" class="form-control" placeholder="Enter Book Title" >
      </div>
      <div class="col-md-12">
        <label for="bookName" class="form-label">price</label>
        <input type="text" name="price" id="bookName" class="form-control" placeholder="Enter Book Title" required>
