<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container mt-5">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h4 class="text-center mb-0">Update Data</h4>
        </div>
        <div class="card-body">
          <form action="/updateData/<%= storeData.id %>" method="post" enctype="multipart/form-data">
            
            <!-- Image Upload -->
            <div class="mb-4">
              <label for="formFile" class="form-label">Upload Image</label>
              <div class="d-flex gap-4 align-items-center">
                <input class="form-control w-75 h-25" type="file" id="formFile" name="image"  value="<%= storeData.image %>">
              <img src="<%=storeData.image %>" alt=""  width="100px" class="rounded">
              </div>
            </div>
            
            <!-- Name -->
            <div class="mb-4">
              <label for="nameInput" class="form-label">Name</label>
              <input type="text" class="form-control" id="nameInput" name="title" placeholder="Enter name"  value="<%= storeData.title %>">
            </div>
            
            <!-- Category -->
            <div class="mb-4">
              <label class="form-label">Category</label>
              <div class="d-flex flex-wrap gap-2">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Action" id="action" name="category"  <%=
            storeData.category.includes("Action") ? "checked" : "" %>>
                  <label class="form-check-label" for="action">Action</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Comedy" id="comedy" name="category"
                  <%=storeData.category.includes("Comedy") ? "checked" : "" %>>
                  <label class="form-check-label" for="comedy">Comedy</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Drama" id="drama" name="category"
                  <%=storeData.category.includes("Drama") ? "checked" : "" %>>
                  <label class="form-check-label" for="drama">Drama</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Fantasy" id="fantasy" name="category"
                  <%=storeData.category.includes("Fantasy") ? "checked" : "" %>>
                  <label class="form-check-label" for="fantasy">Fantasy</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Documentary" id="documentary" name="category"
                  <%=storeData.category.includes("Documentary") ? "checked" : "" %>>
                  <label class="form-check-label" for="documentary">Documentary</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Horror" id="horror" name="category"
                  <%=storeData.category.includes("Horror") ? "checked" : "" %>>
                  <label class="form-check-label" for="horror">Horror</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Romance" id="romance" name="category"
                  <%=storeData.category.includes("Romance") ? "checked" : "" %>>
                  <label class="form-check-label" for="romance">Romance</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Science fiction" id="sci-fi" name="category"
                  <%=storeData.category.includes("Science Fiction") ? "checked" : "" %>>
                  <label class="form-check-label" for="sci-fi">Science Fiction</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Adventure" id="adventure" name="category"
                  <%=storeData.category.includes("Adventure") ? "checked" : "" %>>
                  <label class="form-check-label" for="adventure">Adventure</label>
                </div>
              </div>
            </div>
            
            <!-- Rating -->
            <div class="mb-4">
              <label for="ratingInput" class="form-label">Rating</label>
              <input type="number" class="form-control" id="ratingInput" name="rating"  value="<%= storeData.rating %>" placeholder="Rate between 0 to 10" min="0" max="10">
            </div>
            
            <!-- Votes -->
            <div class="mb-4">
              <label for="votesInput" class="form-label">Votes</label>
              <input type="text" class="form-control" id="votesInput" name="votes" value="<%= storeData.votes %>" placeholder="Enter number of votes">
            </div>
            
            <!-- Submit Button -->
            <div class="text-center">
              <button class="btn btn-success px-5" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
